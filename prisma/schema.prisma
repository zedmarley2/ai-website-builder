// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---------------------------------------------------------------------------
// NextAuth.js Models
// ---------------------------------------------------------------------------

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  password      String?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  websites      Website[]
  accounts      Account[]
  sessions      Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---------------------------------------------------------------------------
// Application Models
// ---------------------------------------------------------------------------

model Website {
  id          String   @id @default(uuid())
  name        String
  description String?
  subdomain   String   @unique
  published   Boolean  @default(false)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  pages   Page[]
  domains Domain[]

  @@index([userId])
  @@index([subdomain])
}

enum DomainStatus {
  PENDING
  VERIFIED
  FAILED
}

model Domain {
  id            String       @id @default(uuid())
  domain        String       @unique
  status        DomainStatus @default(PENDING)
  websiteId     String
  verifiedAt    DateTime?
  lastCheckedAt DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)

  @@index([websiteId])
  @@index([domain])
}

model Page {
  id         String   @id @default(uuid())
  name       String
  slug       String
  order      Int      @default(0)
  content    Json?
  isHomePage Boolean  @default(false)
  websiteId  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  website    Website     @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  components Component[]

  @@unique([websiteId, slug])
  @@index([websiteId])
}

model Component {
  id        String   @id @default(uuid())
  type      String
  name      String
  props     Json?
  styles    Json?
  order     Int      @default(0)
  pageId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId])
  @@index([pageId, order])
}
